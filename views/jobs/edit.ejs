<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/job/jobEditStyle.css">
  <title>Edit Job</title>
</head>
<body>
  <div class="container">
    <h1>Edit Job</h1>
  <form action="/jobs/<%= job._id %>/update?_method=PUT" method="POST">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="<%= job.title %>" required><br>

    <label for="company">Company:</label>
    <input type="text" name="company" id="company" value="<%= job.company %>" required><br>

    <label for="location">Location:</label>
    <input type="text" name="location" id="location" value="<%= job.location %>" required><br>

    <label for="description">Description:</label>
    <textarea name="description" id="description" required><%= job.description %></textarea><br>

    <label for="requirements">Requirements:</label>
    <textarea name="requirements" id="requirements" required><%= job.requirements %></textarea><br>

    <label for="salary">Salary:</label>
    <input type="number" name="salary" id="salary" value="<%= job.salary %>" required><br>

    <label for="contactEmail">Contact Email:</label>
    <input type="email" name="contactEmail" id="contactEmail" value="<%= job.contactEmail %>" required><br>

    <label for="contactPhone">Contact Phone:</label>
    <input type="text" name="contactPhone" id="contactPhone" value="<%= job.contactPhone %>" required><br>

    <label for="deadlineDate">Deadline Date:</label>
    <input type="date" name="deadlineDate" id="deadlineDate" value="<%= job.deadlineDate && job.deadlineDate instanceof Date ? job.deadlineDate.toISOString().substring(0, 10) : '' %>" required><br>

    <label for="isActive">Is Active:</label>
    <input type="checkbox" name="isActive" id="isActive" <%= job.isActive ? "checked" : "" %>><br>
    <div class="button-container">
      <button type="submit">Update Job</button>
    </div>
  </form>
  <br>
  <a href="/jobs">Back to Job Board</a>
  </div>
</body>
</html>
